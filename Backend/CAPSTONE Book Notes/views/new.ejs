<%- include('partials/header.ejs') -%>

<div class="container fs-5">
    <h1>Add a new book</h1>
    <form action="/books" method="post">
        <div class="col-4 mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" name="title" id="title" placeholder="Title goes here...">
        </div>
        <div class="col-4 mb-3">
            <label for="author" class="form-label">Author</label>
            <input type="text" class="form-control" name="author" id="author" placeholder="Author name goes here...">
        </div>
        <div class="col-4 mb-3">
            <label for="read-date" class="form-label">Read On</label>
            <input type="date" class="form-control" name="read-date" id="read-date" >
        </div>
        <div class="col-4 mb-3">
            <label for="isbn" class="form-label">ISBN Number</label>
            <input type="number" class="form-control" name="isbn" id="isbn" >
        </div>
        <div class="col-4 mb-3">
            <label for="rating" class="form-label">Rating</label>
            <input type="number" class="form-control" name="rating" id="rating" value="1" min="1" max="10" step="0.1" >
        </div>
        <div class="col mb-3">
            <label for="summary" class="form-label">Summary</label>
            <textarea class="form-control" name="summary" id="summary" rows="10"
                      placeholder="Start Writing..."></textarea>
        </div>
        <button type="submit" class="btn btn-success btn-lg px-4 me-md-2">Submit</button>

    </form>
</div>


<%- include('partials/footer.ejs') -%>